<% if flash[:errors] && !flash[:errors].empty? %>
  <div class='flash'>
    Please refer to the following errors below:
    <ul id='errors'>
      <% flash[:errors].each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<% if flash[:notice] %>
  <div class='flash'>
    <%= flash[:notice] %>
  </div>
<% end %>
